


@{
    Layout = "_AdminFormLayout";
    ViewBag.Title = "Update";
}

@model UpdateAuthorVM

<form method="post" class="md-float-material form-material" enctype="multipart/form-data">

    <div class="text-center">
        <img src="~/admin/images/logo.png" alt="logo.png">
    </div>
    <div class="auth-box card">
        <div class="card-block">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-center">Create Author</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
            </div>

            <div class="form-group form-primary">
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="form-bar text-danger"></span>
            </div>
            <div class="form-group form-primary">
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="form-bar text-danger"></span>
                <label class="float-label">Author Name</label>
            </div>
            <div class="form-group form-primary">
                <label>Author Is Deleted</label>
                <input style="width:20px;height:20px;" asp-for="IsDeleted" class="form-control" />
                <span asp-validation-for="IsDeleted" class="form-bar text-danger"></span>

            </div>
            <div class="form-group form-primary">
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="form-bar text-danger"></span>
                <label class="float-label">Author Email</label>
            </div>
            <div class="form-group form-primary">
                <input asp-for="About" class="form-control" required />
                <span asp-validation-for="About" class="form-bar text-danger"></span>
                <label class="float-label">Author Informations</label>
            </div>


            <div class="row m-t-30">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Update</button>
                </div>
                <div class="col-md-12">
                    <a asp-action="Index" class="btn btn-danger btn-md btn-block waves-effect waves-light text-center m-b-20">Cancel</a>
                </div>
            </div>

        </div>
    </div>
</form>

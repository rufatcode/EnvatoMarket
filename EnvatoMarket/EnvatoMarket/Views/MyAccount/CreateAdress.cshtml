
@{
    Layout = "_FormLayout";
    ViewBag.Title = "Create";
}

@model CreateAdressVM

<form method="post" class="md-float-material form-material" enctype="multipart/form-data">

    <div class="text-center">
        <img src="~/admin/images/logo.png" alt="logo.png">
    </div>
    <div class="auth-box card">
        <div class="card-block">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-center">Create Address</h3>
                </div>
            </div>
            <div class="form-group form-primary">
                <input asp-for="Country" class="form-control" autocomplete="off" list="countyList" id="selectCountry">

                <span asp-validation-for="Country" class="form-bar text-danger"></span>
                <label class="float-label">Country Name</label>
                <datalist id="countyList">
                </datalist>
            </div>
            <div class="form-group form-primary">
                <input class="form-control" autocomplete="off" list="cityList" id="selectCity" asp-for="City">

                <span asp-validation-for="City" class="form-bar text-danger"></span>
                <label class="float-label">City Name</label>
                <datalist id="cityList">
                </datalist>

            </div>
            <div class="form-group form-primary">
                <input asp-for="Addres1" class="form-control" required />
                <span asp-validation-for="Addres1" class="form-bar text-danger"></span>
                <label class="float-label">Address1</label>
            </div>
            <div class="form-group form-primary">
                <input asp-for="Addres2" class="form-control" required />
                <span asp-validation-for="Addres2" class="form-bar text-danger"></span>
                <label class="float-label">Address2</label>
            </div>
            <div class="form-group form-primary">
                <input asp-for="CompanyName" class="form-control" required />
                <span asp-validation-for="CompanyName" class="form-bar text-danger"></span>
                <label class="float-label">Company Name</label>
            </div>
            <div class="form-group form-primary">
                <input asp-for="ZipCode" class="form-control" required />
                <span asp-validation-for="ZipCode" class="form-bar text-danger"></span>
                <label class="float-label">Zip Code</label>
            </div>
            <div class="form-group form-primary">
                <input asp-for="State" class="form-control" required />
                <span asp-validation-for="State" class="form-bar text-danger"></span>
                <label class="float-label">State</label>
            </div>


            <div class="row m-t-30">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Create</button>
                </div>
                <div class="col-md-12">
                    <a asp-action="Index" class="btn btn-danger btn-md btn-block waves-effect waves-light text-center m-b-20">Cancel</a>
                </div>
            </div>

        </div>
    </div>
</form>
@section CostumScripts{
    <script src="~/assets/js/basket.js"></script>
}





@{
    Layout = "_AdminFormLayout";
    ViewBag.Title = "Update";
}

@model UpdateSettingVM

<form method="post" class="md-float-material form-material" enctype="multipart/form-data">

    <div class="text-center">
        <img src="~/admin/images/logo.png" alt="logo.png">
    </div>
    <div class="auth-box card">
        <div class="card-block">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-center">Update Setting</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <div class="form-group form-primary">
                <input asp-for="Key" class="form-control" required />
                <label class="float-label">Tag Name</label>
            </div>
            <div class="form-group form-primary">
                <input asp-for="Value" class="form-control" required />
                <label class="float-label">Tag Name</label>
            </div>
            <div class="form-group form-primary">
                <label>Setting Deleted:</label>
                <input style="width:20px;height:20px;" asp-for="IsDeleted" class="form-control" />

            </div>
            <div class="row m-t-30">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Update</button>
                </div>
                <div class="col-md-12">
                    <a asp-action="Index" class="btn btn-danger btn-md btn-block waves-effect waves-light text-center m-b-20">Cancel</a>
                </div>
            </div>

        </div>
    </div>
</form>


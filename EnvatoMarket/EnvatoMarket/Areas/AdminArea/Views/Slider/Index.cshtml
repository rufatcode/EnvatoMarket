@{
    ViewBag.Title = "Index";
}
@model List<Slider>
<div class="card" style="width:85%;float:right;">
    <div class="card-header">
        <h5>Inverse Table</h5>
        <span>use class <code>table-inverse</code> inside table element</span>
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                <li><i class="fa fa-window-maximize full-card"></i></li>
                <li><i class="fa fa-minus minimize-card"></i></li>
                <li><i class="fa fa-refresh reload-card"></i></li>
                <li><i class="fa fa-trash close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <a asp-action="Create" class="btn btn-warning btn-md btn-block waves-effect waves-light text-center m-b-20 w-25 mx-3">Create Slider</a>
            <table class="table table-inverse">
                <thead>
                    <tr>
                        <th>Profile Image</th>
                        <th>MainTitle</th>
                        <th>Desctiption</th>
                        <th>IsDeleted</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var slider in Model)
                    {


                        <tr>
                            <td>
                                @if (slider.ImageUrl == null)
                                {
                                    <img width="75" height="75" style="border-radius:50%;" src="~/assets/images/DemoProfileImage.png" />
                                }
                                else
                                {
                                    <img style="border-radius:50%;" width="75" height="75" src="~/assets/images/@slider.ImageUrl" />
                                }
                            </td>
                            <td>@slider.MainTitle</td>
                            <td>@(slider.Description.Length>30?slider.Description.Substring(0,60)+"....":slider.Description)</td>
                            <td>@(slider.IsDeleted?"Deleted":"Active")</td>
                            <td>
                                @if (!slider.IsDeleted)
                                {
                                    <a asp-action="Delete" asp-route-Id="@slider.Id"><i style="font-size:25px;" class="ti-trash text-danger"></i></a>
                                }
                                <a asp-action="Update" asp-route-Id="@slider.Id"><i style="font-size:25px;" class="ti-archive text-danger"></i></a>
                                <a class="mx-3" asp-action="Detail" asp-route-Id="@slider.Id"><i style="font-size:25px;" class="ti-plus text-danger"></i></a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

@section CostumScripts{
    <script type="text/javascript" src="~/admin/js/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/admin/js/jquery-ui/jquery-ui.min.js "></script>
    <script type="text/javascript" src="~/admin/js/popper.js/popper.min.js"></script>
    <script type="text/javascript" src="~/admin/js/bootstrap/js/bootstrap.min.js "></script>
    <!-- waves js -->
    <script src="~/admin/pages/waves/js/waves.min.js"></script>
    <!-- jquery slimscroll js -->
    <script type="text/javascript" src="~/admin/js/jquery-slimscroll/jquery.slimscroll.js "></script>
    <!-- waves js -->
    <script src="~/admin/pages/waves/js/waves.min.js"></script>
    <!-- modernizr js -->
    <script type="text/javascript" src="~/admin/js/modernizr/modernizr.js "></script>
    <!-- Custom js -->
    <script src="~/admin/js/pcoded.min.js"></script>
    <script src="~/admin/js/vertical-layout.min.js "></script>
    <script src="~/admin/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script type="text/javascript" src="~/admin/js/script.js"></script>
}
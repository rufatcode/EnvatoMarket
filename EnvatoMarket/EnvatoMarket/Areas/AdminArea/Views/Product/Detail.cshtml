@{
    ViewBag.Title = "Detail";
}
@model Product
<div class="card" style="width:85%;float:right;">
    <div class="card-header">
        <h5>Inverse Table</h5>
        <span>use class <code>table-inverse</code> inside table element</span>
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                <li><i class="fa fa-window-maximize full-card"></i></li>
                <li><i class="fa fa-minus minimize-card"></i></li>
                <li><i class="fa fa-refresh reload-card"></i></li>
                <li><i class="fa fa-trash close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table table-inverse">
                <thead>
                    <tr>
                        <th>Hover Image</th>
                        <th>Extra Images</th>
                        <th> Name</th>
                        <th> Content</th>
                        <th> Price</th>
                        <th>Availability</th>
                        <th>Count</th>
                        <th>Tags</th>
                        <th>CategoryName</th>
                        <th>Brand</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img width="75" height="75" style="border-radius:50%;" src="~/assets/images/@Model.ProductImages.FirstOrDefault(pi=>pi.IsHover).ImageUrl" />
                        </td>
                        <td>
                            <ul>
                                @foreach (var exImage in Model.ProductImages.Where(pi => !pi.IsDeleted && !pi.IsHover && !pi.IsMain))
                                {
                                    <li style="list-style:none;" class="my-2">
                                        <img width="75" height="75" src="~/assets/images/@exImage.ImageUrl" />
                                    </li>
                                }
                            </ul>

                        </td>
                        <td>@Model.Name</td>
                        <td>@(Model.Content.Length>15?Model.Content.Substring(0,15) +"...":Model.Content)</td>
                        <td>@Model.Price$</td>
                        <td>@(Model.IsAvailability&&Model.Count>0&&Model.IsDeleted==false?"in stock":"is not avaliable")</td>
                        <td>@Model.Count</td>
                        <td>
                            <ul>
                                @foreach (var tag in Model.ProductTags)
                                {
                                    <li style="list-style:none;">@tag.Tag.Name</li>
                                }
                            </ul>
                        </td>
                        <td>@Model.Category.CategoryName</td>
                        <td>@Model.Brand.Name</td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>
</div>

@section CostumScripts{
    <script type="text/javascript" src="~/admin/js/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/admin/js/jquery-ui/jquery-ui.min.js "></script>
    <script type="text/javascript" src="~/admin/js/popper.js/popper.min.js"></script>
    <script type="text/javascript" src="~/admin/js/bootstrap/js/bootstrap.min.js "></script>
    <!-- waves js -->
    <script src="~/admin/pages/waves/js/waves.min.js"></script>
    <!-- jquery slimscroll js -->
    <script type="text/javascript" src="~/admin/js/jquery-slimscroll/jquery.slimscroll.js "></script>
    <!-- waves js -->
    <script src="~/admin/pages/waves/js/waves.min.js"></script>
    <!-- modernizr js -->
    <script type="text/javascript" src="~/admin/js/modernizr/modernizr.js "></script>
    <!-- Custom js -->
    <script src="~/admin/js/pcoded.min.js"></script>
    <script src="~/admin/js/vertical-layout.min.js "></script>
    <script src="~/admin/js/jquery.mCustomScrollbar.concat.min.js"></script>
